{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./components/"],
      "@/api": ["./api/"],
      "@/styles": ["./styles/"],
      "@/pages/*": ["./pages/"],
      "@/images/*": ["./public/images/"],
      "@/store": ["./store/"],
      "@/redux": ["./redux/"],
      "@/helpers": ["./helpers/"],
      "@/utils": ["./utils/"],
      "@/constants": ["./constants/"],
      "@/crashHandling": ["./crashHandling/"],
      "@/middleware/*": ["./middleware/"],
      "@/models/*": ["./models/"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "next.config.mjs",
    "jest.config.mjs"
  ],
  "exclude": ["node_modules"]
}
